{{#section 'title'}}
	Categoriess
{{/section}}
<div class="table-responsive">
	<table class="table table-hover display my-datatable">
	<thead>
		<tr>
			<th>#</th>
			<th>name</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		{{#each categories}}
		<tr>
			<td>{{ID}}</td>
			<td>{{Name}}</td>
			<td class="text-right">
				<a href="/category/delete?id={{ID}}" role="button">
					<i class="fa fa-trash"></i>
				</a>
				<a href="/category/edit?id={{Name}}" role="button">
					<span class="fa fa-edit"></span>
				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
</div>

<a class="btn btn-large btn-block btn-primary" href="/category/add" role="button">
	<span class="glyphicon glyphicon-plus"></span>
	Thêm danh mục mới
</a>








